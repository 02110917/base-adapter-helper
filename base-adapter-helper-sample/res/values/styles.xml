<resources>

    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <item name="android:textColor">#FF666666</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="tweetName">
        <item name="android:textColor">@color/twitter</item>
        <item name="android:textSize">18sp</item>
        <!--<item name="android:textStyle">bold</item>-->
        <item name="android:shadowColor">#44000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="tweetText">
        <item name="android:textColorLink">#FF999999</item>
    </style>

    <style name="tweetDate">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#FFAAAAAA</item>
    </style>

</resources>
